{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist/",
    "module": "commonjs",
    "noImplicitAny": false,
    "strict": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}